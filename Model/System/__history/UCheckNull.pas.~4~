unit UCheckNull;

interface

uses
  Variants;

type
  TCheckNull = class
  private
    IncomingValue: variant;
  published
    function CheckedValue(CheckValue: variant): variant;

  end;

implementation

{ TCheckNull }

function TCheckNull.CheckedValue(CheckValue: variant): variant;
begin
  IncomingValue := 0;
  if CheckValue <> null then
    IncomingValue := CheckValue;
  result := IncomingValue;
end;

end.
