unit MQNTheNumberOfBloodDonations;


interface
uses
  SysUtils, Variants,
  Dialogs, Data.Win.ADODB, GetDataSoursUnit1;

 type
   TTheNumberOfBloodDonations = class
   private
     NumberOfBD: string;
     TempConnect: DataBaseTables;
     TempQuery: TADOQuery;
   public
     function GetValue: string;
     constructor create(DateStart, DateEnd: TDate);
   end;

implementation

{ TTheNumberOfBloodDonations }

constructor TTheNumberOfBloodDonations.create(DateStart, DateEnd: TDate);
begin
  if not Assigned(TempConnect) then
    TempConnect:=DataBaseTables.create;
  if not Assigned(TempQuery) then
    TempQuery:=TADOQuery.Create(nil);
  TempQuery.Connection:=TempConnect.GetConnect;
  TempQuery.Close;
  TempQuery.SQL.Clear;
 { if DateStart>DateEnd then
     begin
       ShowMessage('Конечная дата не может быть меньше начальной');
       exit;
     end
   else
     begin  }
      TempQuery.SQL.Add('SELECT SUM(Blood.КДК) FROM Blood WHERE (Blood.ДатаК) Between #' + FormatDateTime( 'mm''/''dd''/''yyyy', DateStart) + '# And #' +
                                                                              FormatDateTime( 'mm''/''dd''/''yyyy', DateEnd) + '#');
      TempQuery.Open;
      NumberOfBD:=VarToStr(TempQuery.Fields[0].Value);
//     end;
  TempQuery.Close;
end;

function TTheNumberOfBloodDonations.GetValue: string;
begin
  result:=NumberOfBD;
end;

end.
